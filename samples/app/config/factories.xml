<?xml version="1.0" encoding="UTF-8"?>
<a:configurations xmlns:a="http://agavi.org/agavi/1.0/config" xmlns="http://agavi.org/agavi/1.0/config">
	
	<foo:bar xmlns:foo="urn:bar" />
	
	<a:configuration>
		
		<controller class="AgaviController" />
		
		<database_manager class="AgaviDatabaseManager" />
		
		<dispatch_filter class="AgaviDispatchFilter" />
		
		<execution_container class="AgaviExecutionContainer" />
		
		<execution_filter class="AgaviExecutionFilter" />
		
		<filter_chain class="AgaviFilterChain" />
		
		<logger_manager class="AgaviLoggerManager" />
		
		<request class="AgaviWebRequest" />
		
		<response class="AgaviWebResponse" />
		
		<routing class="AgaviWebRouting" />
		
		<security_filter class="AgaviSecurityFilter" />
		
		<storage class="AgaviSessionStorage" />
		
		<user class="AgaviSampleAppUser" />
		
		<translation_manager class="AgaviTranslationManager" />
		
		<validation_manager class="AgaviValidationManager">
			<a:parameter name="mode">strict</a:parameter>
		</validation_manager>
		
	</a:configuration>
	
	<a:configuration environment="development.*">
		
		<validation_manager class="AgaviValidationManager">
			<a:parameter name="mode">conditional</a:parameter>
		</validation_manager>
		
	</a:configuration>
	
	<a:configuration context="web" environment="development.*">
		
		<response class="AgaviWebResponse">
			<a:parameter name="send_content_length">false</a:parameter>
		</response>
	
	</a:configuration>
	
	<a:configuration context="soap">
		
		<controller class="AgaviSoapController" />
		
		<request class="AgaviSoapRequest" />
		
		<response class="AgaviSoapResponse" />
		
		<routing class="AgaviSoapRouting">
			<a:parameter name="wsdl_generator">
				<a:parameter name="soap">
					<a:parameter name="address">
						<a:parameter name="location">http://localhost/~dzuelke/_projects/agavi/branches/0.11/samples/pub/soap.php</a:parameter>
					</a:parameter>
				</a:parameter>
			</a:parameter>
		</routing>
		
		<user class="AgaviSecurityUser" />
		
	</a:configuration>
	
	<a:configuration context="wsdl">
		
		<storage class="AgaviSessionStorage">
			<a:parameter name="auto_start">false</a:parameter>
		</storage>
		
		<user class="AgaviSecurityUser" />
		
	</a:configuration>
	
	<a:configuration context="xmlrpc">
		
		<request class="AgaviXmlrpcepiphpRequest" />
		
		<response class="AgaviXmlrpcepiphpResponse" />
		
		<routing class="AgaviXmlrpcepiphpRouting" />
		
		<user class="AgaviSecurityUser" />
		
	</a:configuration>
	
</a:configurations>