<configurations>
	
	<configuration context="web">
		<output_types default="html">
			
			<output_type name="html">
				<renderer class="AgaviPhpRenderer">
					<assigns>
						<routing>r</routing>
						<request>req</request>
						<controller>ctl</controller>
						<user>usr</user>
						<translation_manager>tm</translation_manager>
					</assigns>
				</renderer>
				<parameters>
					<parameter name="Content-Type">text/html; charset=UTF-8</parameter>
				</parameters>
			</output_type>
			
			<output_type name="xhtml">
				<renderer class="AgaviPhpRenderer">
					<assigns>
						<routing>r</routing>
						<request>req</request>
						<controller>ctl</controller>
						<user>usr</user>
						<translation_manager>tm</translation_manager>
					</assigns>
				</renderer>
				<parameters>
					<parameter name="Content-Type">application/xhtml+xml; charset=UTF-8</parameter>
				</parameters>
			</output_type>
			
		</output_types>
	</configuration>
	
	<configuration context="xmlrpc">
		<output_types default="xmlrpc">
			
			<output_type name="xmlrpc">
				<parameters>
					<parameter name="encoding">UTF-8</parameter>
				</parameters>
			</output_type>
		
		</output_types>
	</configuration>
	
</configurations>
