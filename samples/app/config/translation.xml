<configurations>
	<configuration>
		
		<available_locales default_locale="en_US">
			<available_locale identifier="de_DE">
				<parameters>
					<parameter name="description">Deutsch</parameter>
				</parameters>
			</available_locale>
			<available_locale identifier="en_US">
				<parameters>
					<parameter name="description">English</parameter>
				</parameters>
			</available_locale>
		</available_locales>
		
		<translators default_domain="default">
			<translator domain="default">
				
				<message_translator type="AgaviGettextTranslator">
					<parameters>
						<parameter name="text_domains">
							<parameters>
								<parameter name="menu">%core.app_dir%/data/i18n</parameter>
								<parameter name="layout">%core.app_dir%/data/i18n</parameter>
								<parameter name="Login">%core.app_dir%/data/i18n</parameter>
								<parameter name="SearchEngineSpam">%core.app_dir%/data/i18n</parameter>
								<parameter name="ErrorActions">%core.app_dir%/data/i18n</parameter>
							</parameters>
						</parameter>
					</parameters>
				</message_translator>

				<number_formatter type="number" />

				<currency_formatter type="currency" />

				<date_formatter type="date" />
				
			</translator>
		</translators>
		
	</configuration>
</configurations>
