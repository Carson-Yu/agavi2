<configurations>
	<configuration>
		
		<available_locales default_locale="en_US@currency=GBP">
			<!-- German, Germany -->
			<available_locale identifier="de_DE">
				<parameters>
					<parameter name="description">Deutsch</parameter>
				</parameters>
			</available_locale>
			<!-- English, United States -->
			<available_locale identifier="en_US">
				<parameters>
					<parameter name="description">English</parameter>
				</parameters>
			</available_locale>
			<!-- Farsi, Iran -->
			<available_locale identifier="fa_IR">
				<parameters>
					<parameter name="description">فارسی</parameter>
				</parameters>
			</available_locale>
			<!-- Finnish, Finland -->
			<available_locale identifier="fi_FI">
				<parameters>
					<parameter name="description">Suomi</parameter>
				</parameters>
			</available_locale>
			<!-- Dutch, Belgium -->
			<available_locale identifier="nl_BE">
				<parameters>
					<parameter name="description">Nederlands (België)</parameter>
				</parameters>
			</available_locale>
			<!-- Dutch, The Netherlands -->
			<available_locale identifier="nl_NL">
				<parameters>
					<parameter name="description">Nederlands</parameter>
				</parameters>
			</available_locale>
			<!-- Polish, Poland -->
			<available_locale identifier="pl_PL">
				<parameters>
					<parameter name="description">Polski</parameter>
				</parameters>
			</available_locale>
			<!-- Chinese Simplified, China (alias for zh_Hans_CN, Simplified Han) -->
			<available_locale identifier="zh_CN">
				<parameters>
					<parameter name="description">简体中文</parameter>
				</parameters>
			</available_locale>
			<!-- Chinese Traditional, Taiwan (alias for zh_Hant_TW, Traditional Han) -->
			<available_locale identifier="zh_TW">
				<parameters>
					<parameter name="description">繁體中文</parameter>
				</parameters>
			</available_locale>
		</available_locales>
		
		<translators default_domain="default">
			<translator domain="default">
				
				<message_translator type="AgaviGettextTranslator">
					<parameters>
						<parameter name="text_domains">
							<parameters>
								<parameter name="menu">%core.app_dir%/data/i18n</parameter>
								<parameter name="layout">%core.app_dir%/data/i18n</parameter>
								<parameter name="Login">%core.app_dir%/data/i18n</parameter>
								<parameter name="SearchEngineSpam">%core.app_dir%/data/i18n</parameter>
								<parameter name="ErrorActions">%core.app_dir%/data/i18n</parameter>
							</parameters>
						</parameter>
					</parameters>
				</message_translator>

				<number_formatter type="number" />

				<currency_formatter type="currency" />

				<date_formatter type="date">
					<parameters>
						<parameter name="format">full</parameter>
					</parameters>
				</date_formatter>
				
			</translator>
		</translators>
		
	</configuration>
</configurations>
