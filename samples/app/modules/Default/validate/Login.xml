<configurations>
	<!-- custom validators and default parameters -->
	<configuration>
		<validators>

			<validator class="string" name="username_too_short">
				<parameters>
					<parameter name="param">username</parameter>
					<parameter name="min">5</parameter>
					<parameter name="min_error">The username you supplied is fewer than 5 characters long.</parameter>
				</parameters>
			</validator>

			<validator class="string" name="password_non_existant">
				<parameters>
					<parameter name="param">password</parameter>
					<parameter name="min">1</parameter>
					<parameter name="min_error">Please supply a password.</parameter>
				</parameters>
			</validator>
			
			<validator class="isset" name="remember" severity="none">
				<parameters>
					<parameter name="param">remember</parameter>
				</parameters>
			</validator>

		</validators>
	</configuration>
</configurations>