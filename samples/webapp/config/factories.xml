| AGAVI FACTORIES CONFIGURATION                                              |
| ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ |
| The default configuration must at least define:                            |
|                                                                            |
|  action_stack          - The ActionStack class implementation.             |
|  controller            - The Controller class implementation.              |
|  execution_filter      - The ExecutionFilter class implementation.         |
|  request               - The Request class implementation.                 |
|  storage               - The Storage class implementation.                 |
|  * database_manager    - The DatabaseManager class implementation.         |
|  ** security_filter    - The SecurityFilter class implementation.          |
|  ** user               - The User class implementation.                    |
|                                                                            |
| * if "core.use_database" is turned on in the parameters.xml config           |
| ** if "core.use_security" is turned on in the parameters.xml config          |
+~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~+
-->
<configurations>
	
	<configuration>
		
		<action_stack>
			<class>AgaviActionStack</class>
		</action_stack>
		
		<controller>
			<class>AgaviWebController</class>
		</controller>
		
		<database_manager>
			<class>AgaviDatabaseManager</class>
		</database_manager>
		
		<execution_filter>
			<class>AgaviExecutionFilter</class>
		</execution_filter>
		
		<filter_chain>
			<class>AgaviFilterChain</class>
		</filter_chain>
		
		<logger_manager>
			<class>AgaviLoggerManager</class>
		</logger_manager>
		
		<request>
			<class>AgaviWebRequest</class>
			<parameters>
				<parameter name="default_namespace">org.agavi</parameter>
				<parameter name="module_accessor">module</parameter>
				<parameter name="action_accessor">action</parameter>
				<parameter name="url_format">GET</parameter>
				<parameter name="path_info_array">SERVER</parameter>
				<parameter name="path_info_key">PATH_INFO</parameter>
			</parameters>
		</request>

		<routing>
			<class>AgaviRouting</class>
		</routing>

		<security_filter>
			<class>AgaviSecurityFilter</class>
		</security_filter>
		
		<storage>
			<class>AgaviSessionStorage</class>
		</storage>
		
		<user>
			<class>AgaviBasicSecurityUser</class>
			<parameters>
				<parameter name="default_namespace">org.agavi</parameter>
			</parameters>
		</user>
		
		<validator_manager>
			<class>AgaviValidatorManager</class>
		</validator_manager>
		
	</configuration>
	
</configurations>