<configurations>
	
	<configuration>
		
		<action_stack>
			<class>AgaviActionStack</class>
		</action_stack>
		
		<controller>
			<class>AgaviFrontWebController</class>
		</controller>
		
		<database_manager>
			<class>AgaviDatabaseManager</class>
		</database_manager>
		
		<logger_manager>
			<class>AgaviLoggerManager</class>
		</logger_manager>
		
		<request>
			<class>AgaviWebRequest</class>
			<settings>
				<setting name="default_namespace">org.agavi</setting>
				<setting name="module_accessor">module</setting>
				<setting name="action_accessor">action</setting>
				<setting name="url_format">GET</setting>
				<setting name="path_info_array">SERVER</setting>
				<setting name="path_info_key">PATH_INFO</setting>
			</settings>
		</request>
		
		<storage>
			<class>AgaviSessionStorage</class>
		</storage>
		
		<user>
			<class>AgaviBasicSecurityUser</class>
			<settings>
				<setting name="default_namespace">org.agavi</setting>
			</settings>
		</user>
		
		<validator_manager>
			<class>AgaviValidatorManager</class>
		</validator_manager>
		
	</configuration>
	
</configurations>