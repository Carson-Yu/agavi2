<configurations>
	<configuration>
		<!-- Validator name -> class mapping -->
		<validators>
			<validator name="and" class="AgaviAndoperatorValidator" />
			<validator name="date" class="AgaviDateValidator" />
			<validator name="email" class="AgaviEmaiValidator" />
			<validator name="equals" class="AgaviEqualsValidator" />
			<validator name="inarray" class="AgaviInarrayValidator" />
			<validator name="isset" class="AgaviIssetValidator" />
			<validator name="isuploadedimage" class="AgaviIsuploadedimageValidator" />
			<validator name="mktimestamp" class="AgaviMktimestampValidator" />
			<validator name="not" class="AgaviNotoperatorValidator" />
			<validator name="number" class="AgaviNumberValidator" />
			<validator name="or" class="AgaviOroperatorValidator" />
			<validator name="regex" class="AgaviRegexValidator" />
			<validator name="set" class="AgaviSetValidator" />
			<validator name="string" class="AgaviStringValidator" />
			<validator name="time" class="AgaviTimeValidator" />
			<validator name="xor" class="AgaviXoroperatorValidator" />
		</validators>
		
		<!-- default settings -->
		<defaults>
			<default name="and">
				<parameters>
					<parameter name="break">1</parameter>
				</parameters>
			</default>
			<default name="date">
				<parameters>
					<parameter name="check">1</parameter>
				</parameters>
			</default>
			<default name="inarray">
				<parameters>
					<parameter name="sep">,</parameter>
				</parameters>
			</default>
			<default name="number">
				<parameters>
					<parameter name="type">int</parameter>
				</parameters>
			</default>
			<default name="or">
				<parameters>
					<parameter name="break">1</parameter>
				</parameters>
			</default>
			<default name="regex">
				<parameters>
					<parameter name="match">1</parameter>
				</parameters>
			</default>
			<default name="string">
				<parameters>
					<parameter name="min">1</parameter>
				</parameters>
			</default>
			<default name="time">
				<parameters>
					<parameter name="check">1</parameter>
				</parameters>
			</default>
		</defaults>

	</configuration>
</configurations>